@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser > SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav justify-content-end flex-grow-1 gap-2 pe-1">
    @if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <a class="nav-link p-0 @(Context.Request.Path.Value.Contains("/Favorites") ? "active" : "")" asp-controller="Favorites" asp-action="Index">
                <i class="fas fa-heart"></i>
            </a>
        </li>
        <li class="nav-item">
            <form class="nav-link p-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link " style="margin-top:-8px;">
                    <i class="fas fa-sign-out-alt"></i>

                </button>
            </form>
        </li>
        <li class="nav-item">
            <a class="nav-link p-0" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> @User.Identity?.Name!</a>
        </li>



}
else
{
    <li class="nav-item">
            <a class="nav-link p-0" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link p-0" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
